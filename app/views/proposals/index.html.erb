<h1>Proposals</h1>


<table id="summary">
<th></th>
<th>Proposal</th>
<th>Speakers</th>
<th>Abstract</th>
<th>Score</th>
<% @proposals.each_with_index do |proposal, i| %>
<tr class="proposal">
  <td><%= i + 1 %>.</td>
  <td class="title"><%= link_to proposal.title, proposal %></td>
  <td class="presenters"> <%= comma_separated_speakers(proposal) %>  </td>
  <td class="abstract"> <%= short(proposal.abstract, 200)%></td>
  <td class="score"><%= rating(proposal)%></td>
</tr>
<% end %>
</table>
