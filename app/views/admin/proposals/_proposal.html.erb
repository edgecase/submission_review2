<div class='select'><%= check_box_tag 'selected_proposals[]', proposal.id, false, :class=>'select_proposal' %></div>
<div class='title'><%= h proposal.title%></div>
<div class='presenters'><%= comma_separated_speakers(proposal)%></div>
<div class='state'><%= h proposal.state%></div>
<div class='events'>
	<% proposal.aasm_events_for_current_state.each do |event| %>
    <%= button_to event, :update=>dom_id(proposal), :url=>update_state_admin_proposal_path(proposal), :remote=>true, :method=>:put, :with=>"'event=#{event}'"%>
	<% end%>
</div>

